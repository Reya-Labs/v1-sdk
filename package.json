{
  "name": "@voltz-protocol/v1-sdk",
  "version": "1.46.5",
  "description": "A TypeScript wrapper for the Voltz smart contract",
  "main": "dist/index.js",
  "types": "dist/types",
  "license": "MIT",
  "files": [
    "src/**/*",
    "dist/**/*",
    "README.md"
  ],
  "scripts": {
    "prepare": "is-ci || husky install",
    "build": "tsc -p tsconfig.build.json",
    "prebuild-release": "yarn code-quality:check",
    "build-release": "node scripts/release.js",
    "prettier": "prettier 'src/**/*.ts'",
    "prettier:fix": "prettier --write 'src/**/*.ts'",
    "prettier:check": "prettier --check 'src/**/*.ts'",
    "lint:check": "eslint 'src/**/*.{ts,tsx}'",
    "lint:fix": "eslint --fix 'src/**/*.ts'",
    "yalc:push-changes": "yarn build-release && npx yalc publish && npx yalc push --sig",
    "test": "npx jest tests/jest/*.ts && npx hardhat test",
    "release": "semantic-release",
    "irs-setup": "ts-node scripts/setup.ts",
    "decode-error": "ts-node src/utils/errors/decodeError.ts",
    "code-quality:check": "npx concurrently 'yarn prettier:check' 'yarn lint:check'"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@jest/globals": "^29.3.1",
    "@nomiclabs/hardhat-ethers": "^2.2.1",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@semantic-release/git": "^10.0.0",
    "@semantic-release/npm": "^8.0.2",
    "@sentry/cli": "2.10.0",
    "@types/big.js": "^6.1.3",
    "@types/coingecko-api": "^1.0.10",
    "@types/faker": "^5.5.8",
    "@types/jest": "^29.2.4",
    "@types/lodash": "^4.14.174",
    "@types/luxon": "^2.0.9",
    "@types/mocha": "^9.1.1",
    "@typescript-eslint/eslint-plugin": "4.31.2",
    "@typescript-eslint/parser": "4.31.2",
    "chai": "^4.3.7",
    "commitizen": "^4.2.4",
    "concurrently": "7.6.0",
    "dotenv": "^16.0.3",
    "eslint": "7.32.0",
    "eslint-config-airbnb": "18.2.1",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-react": "^7.26.0",
    "eslint-plugin-unused-imports": "2.0.0",
    "ethereum-waffle": "^3.4.4",
    "hardhat": "^2.12.2",
    "husky": "^7.0.2",
    "is-ci": "3.0.1",
    "jest": "^29.3.1",
    "lint-staged": "11.1.2",
    "mocha": "^10.1.0",
    "prettier": "2.4.1",
    "semantic-release": "^18.0.0",
    "semantic-release-cli": "^5.4.4",
    "sinon": "15.0.1",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.4.3",
    "yalc": "^1.0.0-pre.53"
  },
  "dependencies": {
    "@ethersproject/address": "^5.7.0",
    "@metamask/detect-provider": "^1.2.0",
    "@sentry/browser": "7.25.0",
    "@sentry/tracing": "7.25.0",
    "@voltz-protocol/subgraph-data": "1.16.0",
    "axios": "^0.27.2",
    "big.js": "^6.1.1",
    "coingecko-api": "^1.0.10",
    "cross-fetch": "^3.1.5",
    "decimal.js-light": "^2.5.1",
    "ethers": "^5.5.2",
    "evm-bn": "^1.1.1",
    "fraction.js": "^4.2.0",
    "jsbi": "^4.2.0",
    "keccak256": "^1.0.6",
    "lodash": "^4.17.21",
    "luxon": "^2.3.0",
    "merkletreejs": "^0.3.0",
    "react": "^18.2.0",
    "tiny-invariant": "^1.2.0",
    "toformat": "^2.0.0"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "angular",
          "releaseRules": [
            {
              "type": "build",
              "release": "patch"
            },
            {
              "type": "chore",
              "release": "patch"
            },
            {
              "type": "ci",
              "release": "patch"
            },
            {
              "type": "docs",
              "release": "patch"
            },
            {
              "type": "feat",
              "release": "minor"
            },
            {
              "type": "fix",
              "release": "patch"
            },
            {
              "type": "perf",
              "release": "patch"
            },
            {
              "type": "refactor",
              "release": "patch"
            },
            {
              "type": "revert",
              "release": "patch"
            },
            {
              "type": "style",
              "release": "patch"
            },
            {
              "type": "test",
              "release": "patch"
            }
          ],
          "parserOpts": {
            "noteKeywords": [
              "BREAKING CHANGE",
              "BREAKING CHANGES"
            ]
          }
        }
      ],
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "assets": [
            "dist/**/*.{js}",
            "package.json"
          ],
          "message": "chore: Release ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  }
}
