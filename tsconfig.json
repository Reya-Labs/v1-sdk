{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es2019", "ES2021.String"],
    "module": "commonjs",
    "rootDirs": [
      "src",
      "scripts"
    ],
    "typeRoots" : ["./node_modules/@types", "./types"],
    "resolveJsonModule": true,
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  }
}
